        <!-- Nav tabs --><div class="card">
            @*<ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#principale" aria-controls="principale" role="tab" data-toggle="tab">Info principal</a></li>
                    <li role="presentation"><a href="#compteur" aria-controls="compteur" role="tab" data-toggle="tab">Compteur</a></li>
