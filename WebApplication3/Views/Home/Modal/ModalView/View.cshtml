            <!-- Tab panes -->
            <div class="tab-content ">
                <div role="tabpanel" class="tab-pane active table-responsive" id="principale">
                    <table class="table table-bordred table-striped" id="CustomerGrid">
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.vehicule.immat)
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.vehicule.immat)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.vehicule.modele)
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.vehicule.modele)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.vehicule.marque)
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.vehicule.marque)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.vehicule.Designation)
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.vehicule.Designation)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.vehicule.Num_serie)
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.vehicule.Num_serie)
                            </td>
                        </tr>
                    </table>
                </div>
                <div role="tabpanel" class="tab-pane  table-responsive" id="compteur">
                    <table class="table table-bordred table-striped" id="CustomerGrid" d>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.vehicule.compteur_heure)
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.vehicule.compteur_heure)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.vehicule.compteur_KM)
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.vehicule.compteur_KM)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.vehicule.date_compteur)
                            </td>
                            <td>
                                <div class="form-group row">
                                    <div class="col-10">
                                        @{
                                            var date = "";
                                            var time = "";
                                            if (Model.vehicule != null)
                                            {
                                                var list = Model.vehicule.date_compteur.ToString().Split(' ');
                                                if (list[0] != "")
                                                {
                                                    var nums = "";
                                                    foreach (char num in list[0])
                                                    {
                                                        if (num == '/')
                                                        {
                                                            if (date == "")
                                                            {
                                                                date = nums;
                                                                nums = "";
                                                            }
                                                            else
                                                            {
                                                                date = nums + "-" + date;
                                                                nums = "";

                                                            }
                                                        }
                                                        else
                                                        {
                                                            nums = nums + num;
                                                        }
                                                    }
                                                    date = nums + "-" + date;

                                                    time = list[1];
                                                }
                                                else
                                                {
                                                    date = "";
                                                    time = "";
                                                }

                                            }
                                        }
                                        <input class="form-control" type="datetime-local" value="@(date+"T"+time)" id="example-datetime-local-input" size="1">
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="messages">
                    <table class="table table-bordred table-striped" id="CustomerGrid">
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.vehicule.id_famille_vehicule)
                            </td>
                            <td>
                                <div class="form-group">
                                    <select class="form-control" id="exampleSelect1" value="test" size="1">
                                        @{
                                            foreach (var fam in Model.familles)
                                            {
                                                if (@fam.id_famille_vehicule == Model.vehicule.id_famille_vehicule)
                                                {
                                                    <option selected>@fam.libelle_famille_vehicules</option>
                                                }
                                                else
                                                {
                                                    <option>@fam.libelle_famille_vehicules</option>
                                                }

                                            }
                                        }
                                    </select>
                                </div>
                            </td>
                        </tr>

                    </table>
                    @*ViewBag.Famille*@
                </div>
                <div role="tabpanel" class="tab-pane" id="settings">
                    wqsrghsethrthrths

                </div>
            </div>
        </div>
    </div>
