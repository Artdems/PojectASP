@model List<WebApplication3.Models.Vehicules>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-sm-9 col-md-9" onload="search(@ViewBag.recherche)">
    <script>
        var search = document.getElementById('searchInput');
        search.value = "@ViewBag.recherche";
    </script>
    <script src="~/Scripts/jquery-1.12.1.js" type="text/javascript" ></script>
    <script src="~/Scripts/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <link href="~/Scripts/jquery-ui.css" rel="stylesheet" type="text/css" />
    <div class="container">
        <div class="row">

            
            <div class="col-md-12">

               


                <h4 >Tableau de Véhicule</h4>
                <div class="table-responsive" id="TableVehicule" >
                    
                    <button type="button" class="btn btn-primary btn-lg" data-action="Ajouter" data-type="Vehicule" data-toggle="modal" data-target="#GetModal" id="NewIDC">Ajouter un Véhicule</button>
                    <table class="table table-bordred table-striped" id="CustomerGrid">

                        <thead>
                            <tr>

                                <th><input type="checkbox" id="checkall" /></th>
                                <th>Immatriculation</th>
                                <th>Marque</th>
                                <th>Model</th>
                                <th>Designation</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>

                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><input type="checkbox" class="checkthis" /></td>
                                    <td>@item.immat</td>
                                    <td>@item.marque</td>
                                    <td>@item.modele</td>
                                    <td>@item.Designation</td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Edit">
                                            <button class="btn btn-primary btn-xs" id="@(item.id_vehicule)" data-action="Editer" data-type="Vehicule" data-toggle="modal" data-target="#GetModal">
                                                <span class="glyphicon glyphicon-pencil">

                                                </span>
                                            </button>

                                        </p>
                                    </td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Delete">
                                            <button class="btn btn-danger btn-xs" id="@(item.id_vehicule)" data-action="Suprimer" data-type="Vehicule" data-toggle="modal" data-target="#GetModal">
                                                <span class="glyphicon glyphicon-trash">

                                                </span>
                                            </button>
                                        </p>
                                    </td>

                                </tr>
                            }





                        </tbody>

                    </table>
                    <div class="clearfix"></div>
                    <ul class="pagination pull-right">
                        @if (ViewBag.PageMax == 1)
                        {
                            
                        }
                        else if (ViewBag.PageMax == 2 && ViewBag.Page == 1)
                        {
                            <li class="active"><a href="/Home/RechercheVehicule/@(ViewBag.Page)" id="@(ViewBag.Page)">@(ViewBag.Page)</a></li>
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+1)" id="@(ViewBag.Page+1)">@(ViewBag.Page+1)</a></li>
                        }
                        else if (ViewBag.PageMax == 2 && ViewBag.Page == 2)
                        {
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-1)" id="@(ViewBag.Page-1)">@(ViewBag.Page - 1)</a></li>
                            <li class="active"><a href="/Home/RechercheVehicule/@(ViewBag.Page)" id="@(ViewBag.Page)">@ViewBag.Page</a></li>
                        }
                        else if (ViewBag.PageMax == 3 && ViewBag.Page == 1)
                        {
                            <li class="active"><a href="/Home/RechercheVehicule/@(ViewBag.Page)" id="@(ViewBag.Page)">@(ViewBag.Page)</a></li>
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+1)" id="@(ViewBag.Page+1)">@(ViewBag.Page+1)</a></li>
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+2)" id="@(ViewBag.Page+2)">@(ViewBag.Page + 2)</a></li>
                        }
                        else if (ViewBag.PageMax == 3 && ViewBag.Page == 2)
                        {
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-1)" id="@(ViewBag.Page-1)">@(ViewBag.Page - 1)</a></li>
                            <li class="active"><a href="/Home/RechercheVehicule/@(ViewBag.Page)" id="@(ViewBag.Page)">@ViewBag.Page</a></li>
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+1)" id="@(ViewBag.Page+1)">@(ViewBag.Page + 1)</a></li>
                        }
                        else if (ViewBag.PageMax == 3 && ViewBag.Page == 3)
                        {
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-2)" id="@(ViewBag.Page-2)">@(ViewBag.Page - 2)</a></li>
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-1)" id="@(ViewBag.Page-1)">@(ViewBag.Page-1)</a></li>
                            <li  class="active"><a href="/Home/RechercheVehicule/@(ViewBag.Page)" id="@(ViewBag.Page)">@(ViewBag.Page)</a></li>
                        }
                        else if (ViewBag.Page == ViewBag.PageMin)
                        {
                            <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                            <li class="active"><a href="/Home/RechercheVehicule/@(ViewBag.Page)" id="@(ViewBag.Page)">@ViewBag.Page</a></li>
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+1)" id="@(ViewBag.Page+1)">@(ViewBag.Page + 1)</a></li>
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+2)" id="@(ViewBag.Page+2)">@(ViewBag.Page + 2)</a></li>
                            <li class="disabled"><a href="#">...</a></li>
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.PageMax)" id="@(ViewBag.PageMax)">@(ViewBag.PageMax)</a></li>
                        }
                        else if (ViewBag.Page == ViewBag.PageMax)
                        {
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-1)" id="@(ViewBag.Page-1)"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.PageMin)" id="@(ViewBag.PageMin)">@(ViewBag.PageMin)</a></li>
                            <li class="disabled"><a href="#">...</a></li>
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-2)" id="@(ViewBag.Page-2)">@(ViewBag.Page - 2)</a></li>
                            <li><a href="@(ViewBag.Page-1)" id="@(ViewBag.Page-1)">@(ViewBag.Page - 1)</a></li>
                            <li class="active"><a href="/Home/RechercheVehicule/@(ViewBag.Page)" id="@(ViewBag.Page)">@ViewBag.Page</a></li>
                        }
                        else
                        {
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-1)" id="@(ViewBag.Page-1)"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                            if (ViewBag.Page > ViewBag.PageMin + 2)
                            {
                                if (ViewBag.Page < ViewBag.PageMax - 2)
                                {
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.PageMin)" id="@(ViewBag.PageMin)">@(ViewBag.PageMin)</a></li>
                                    <li class="disabled"><a href="#">...</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-2)" id="@(ViewBag.Page-2)">@(ViewBag.Page - 2)</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-1)" id="@(ViewBag.Page-1)">@(ViewBag.Page - 1)</a></li>
                                    <li class="active"><a href="/Home/RechercheVehicule/@(ViewBag.Page)" id="@(ViewBag.Page)">@ViewBag.Page</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+1)" id="@(ViewBag.Page+1)">@(ViewBag.Page + 1)</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+2)" id="@(ViewBag.Page+2)">@(ViewBag.Page + 2)</a></li>
                                    <li class="disabled"><a href="#">...</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.PageMax)" id="@(ViewBag.PageMax)">@(ViewBag.PageMax)</a></li>
                                }
                                else
                                {
                                    if (ViewBag.Page == ViewBag.PageMax - 2)
                                    {
                                        <li><a href="/Home/RechercheVehicule/@(ViewBag.PageMin)" id="@(ViewBag.PageMin)">@(ViewBag.PageMin)</a></li>
                                        <li class="disabled"><a href="#">...</a></li>
                                        <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-2)" id="@(ViewBag.Page-2)">@(ViewBag.Page - 2)</a></li>
                                        <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-1)" id="@(ViewBag.Page-1)">@(ViewBag.Page - 1)</a></li>
                                        <li class="active"><a href="/Home/RechercheVehicule/@(ViewBag.Page)" id="@(ViewBag.Page)">@ViewBag.Page</a></li>
                                        <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+1)" id="@(ViewBag.Page+1)">@(ViewBag.Page + 1)</a></li>
                                        <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+2)" id="@(ViewBag.Page+2)">@(ViewBag.Page + 2)</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="/Home/RechercheVehicule/@(ViewBag.PageMin)" id="@(ViewBag.PageMin)">@(ViewBag.PageMin)</a></li>
                                        <li class="disabled"><a href="#">...</a></li>
                                        <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-2)" id="@(ViewBag.Page-2)">@(ViewBag.Page - 2)</a></li>
                                        <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-1)" id="@(ViewBag.Page-1)">@(ViewBag.Page - 1)</a></li>
                                        <li class="active"><a href="/Home/RechercheVehicule/@(ViewBag.Page)" id="@(ViewBag.Page)">@ViewBag.Page</a></li>
                                        <li><a href="/Home/RechercheVehicule/@(ViewBag.PageMax)" id="@(ViewBag.PageMax)">@(ViewBag.PageMax)</a></li>

                                    }

                                }


                            }
                            else
                            {
                                if (ViewBag.Page == ViewBag.PageMin + 2)
                                {
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-2)" id="@(ViewBag.Page-2)">@(ViewBag.Page - 2)</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.Page-1)" id="@(ViewBag.Page-1)">@(ViewBag.Page - 1)</a></li>
                                    <li class="active"><a href="/Home/RechercheVehicule/@(ViewBag.Page)" id="@(ViewBag.Page)">@ViewBag.Page</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+1)" id="@(ViewBag.Page+1)">@(ViewBag.Page + 1)</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+2)" id="@(ViewBag.Page+2)">@(ViewBag.Page + 2)</a></li>
                                    <li class="disabled"><a href="#">...</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.PageMax)" id="@(ViewBag.PageMax)">@(ViewBag.PageMax)</a></li>
                                }
                                else
                                {
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.PageMin)" id="@(ViewBag.PageMin)">@(ViewBag.PageMin)</a></li>
                                    <li class="active"><a href="#" onclick="nav(@(ViewBag.Page) )" id="@(ViewBag.Page)">@ViewBag.Page</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+1)" id="@(ViewBag.Page+1)">@(ViewBag.Page + 1)</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+2)" id="@(ViewBag.Page+2)">@(ViewBag.Page + 2)</a></li>
                                    <li class="disabled"><a href="#">...</a></li>
                                    <li><a href="/Home/RechercheVehicule/@(ViewBag.PageMax)" id="@(ViewBag.PageMax)">@(ViewBag.PageMax)</a></li>
                                }

                            }
                        }
                        @if (ViewBag.Page == ViewBag.PageMax)
                        {
                            <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
                        }
                        else
                        {
                            <li><a href="/Home/RechercheVehicule/@(ViewBag.Page+1)" id="@(ViewBag.Page+1)"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
                        }

                    </ul>

                </div>

            </div>
        </div>
    </div>
    
    <!-- Modal -->

    @Html.Partial("Modal/ModalVehicule")
</div>




